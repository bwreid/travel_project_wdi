.row
  .large-12
    %h1 Login
    - if flash[:notice]
      .alert-box.alert
        = flash[:notice]
    = form_tag('/login') do
      = label_tag "E-mail"
      = text_field_tag "email"
      = label_tag "Password"
      = password_field_tag "password"
      = submit_tag "Login", :class => 'button'